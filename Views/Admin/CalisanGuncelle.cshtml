@model kuafor.Models.Calisan

<h2>Çalışan Güncelle</h2>
<form asp-action="CalisanGuncelle" method="post">
    <input type="hidden" name="CalisanId" value="@Model.CalisanId" />
    <div class="form-group">
        <label for="Ad">Ad</label>
        <input type="text" id="Ad" name="Ad" value="@Model.Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Soyad">Soyad</label>
        <input type="text" id="Soyad" name="Soyad" value="@Model.Soyad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Hizmetler</label>
        @foreach (var hizmet in ViewBag.Hizmetler)
        {
            <div>
                <input type="checkbox" name="hizmetIds" value="@hizmet.HizmetId" 
                       @(Model.CalisanHizmetler.Any(ch => ch.HizmetId == hizmet.HizmetId) ? "checked" : "") />
                <label>@hizmet.HizmetAdi</label>
            </div>
        }
    </div>
    <div class="form-group">
        <label>Uzmanlık Alanı</label>
        <select name="uzmanlikHizmetId" class="form-control">
            @foreach (var hizmet in ViewBag.Hizmetler)
            {
                <option value="@hizmet.HizmetId" >
                    @hizmet.HizmetAdi
                </option>
            }
        }
    </select>
    </div>
    <button type="submit" class="btn btn-warning">Güncelle</button>
</form>