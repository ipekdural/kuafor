@{
    ViewData["Title"] = "Kullanıcı Girişi";
}

<div class="container mt-4">
    <h2>Kullanıcı Girişi</h2>

    @if (ViewBag.HataMesaji != null)
    {
        <div class="alert alert-danger">@ViewBag.HataMesaji</div>
    }

    <form method="post" action="/Kullanici/Giris">
        <div class="mb-3">
            <label for="email" class="form-label">E-posta</label>
            <input type="email" class="form-control" id="email" name="Email" required placeholder="E-postanızı girin">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Şifre</label>
            <input type="password" class="form-control" id="password" name="Sifre" required placeholder="Şifrenizi girin">
        </div>
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </form>

    <hr>
    <p>Henüz bir hesabınız yok mu?</p>
    <a href="/Kullanici/Kayit" class="btn btn-secondary">Kayıt Ol</a>
</div>

