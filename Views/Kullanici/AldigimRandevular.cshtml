@model List<kuafor.Models.Randevu>

@{
    var kullaniciAdi = User.Identity.Name; // Kullanıcı adı oturumdan alınır
    var calisanlar = ViewBag.Calisanlar as List<kuafor.Models.Calisan>; // ViewBag'i uygun türe cast et
}

<h2>Randevularım</h2>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4>Hoşgeldiniz, @kullaniciAdi</h4>
    </div>
    <form asp-action="CikisYap" method="post">
        <button type="submit" class="btn btn-danger">Çıkış Yap</button>
    </form>
</div>

@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger">
        @TempData["HataMesaji"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Randevu Tarihi</th>
            <th>Hizmet</th>
            <th>Çalışan</th>
            <th>Onay Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.RandevuTarihi.ToString("g")</td>
                <td>@randevu.Hizmet.HizmetAdi</td>
                <td>@randevu.Calisan.Ad @randevu.Calisan.Soyad</td>
                <td>
                    <span class="badge bg-warning text-dark">Bekliyor</span> <!-- Sarı -->
                    @if (randevu.OnayliMi == true)
                    {
                        <span class="badge bg-success">Onaylı</span> <!-- Yeşil -->
                    }

                    else if (randevu.OnayliMi == false && DateTime.Now >= randevu.RandevuTarihi)
                    {
                        <span class="badge bg-danger">Reddedildi</span> <!-- Kırmızı -->
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
<h2>Yeni Randevu Al</h2>
<form asp-action="RandevuAl" method="post">
    <div class="form-group">
        <label>Çalışan</label>
        <select name="calisanId" class="form-control" required>
            <option value="">Çalışan seçiniz</option>
            @foreach (var calisan in calisanlar)
            {
                <option value="@calisan.CalisanId">@calisan.Ad @calisan.Soyad</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Hizmet</label>
        <select name="hizmetId" class="form-control" required>
            <option value="">Hizmet seçiniz</option>
            @foreach (var calisan in calisanlar)
            {
                foreach (var hizmet in calisan.CalisanHizmetler.Select(ch => ch.Hizmet).Distinct().ToList())
                {
                    <option value="@hizmet.HizmetId">@hizmet.HizmetAdi</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label>Randevu Tarihi</label>
        <input type="datetime-local" name="randevuTarihi" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>
    <button type="submit" class="btn btn-primary">Randevu Al</button>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4>Hoşgeldiniz, @kullaniciAdi</h4>
        </div>
        <form asp-action="CikisYap" method="post">
            <button type="submit" class="btn btn-danger">Çıkış Yap</button>
        </form>
    </div>

</form>
