<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Kuaför Uygulaması</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('/images/image.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Poppins', sans-serif;
            color: #333;
        }

        .navbar {
            background-color: rgba(255, 255, 255, 0.8); /* Şeffaflık */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8); /* Şeffaflık */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1, h2, h3, h4, h5, h6 {
            font-weight: 600; /* Başlıklar için kalın yazı */
            color: #444; /* Başlık rengini ayarlayın */
            margin-top: 1rem; /* Üst boşluk */
            margin-bottom: 1rem; /* Alt boşluk */
        }

        p, a, li, button {
            font-weight: 400; /* Normal yazılar için standart ağırlık */
        }

        a {
            text-decoration: none; /* Link alt çizgisi kaldırıldı */
        }

            a:hover {
                text-decoration: underline; /* Üzerine gelince alt çizgi */
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <!-- Geri Dön Butonu -->
            <a class="btn btn-outline-secondary me-3" href="javascript:history.back()">Geri Dön</a>

            <a class="navbar-brand" href="/">Kuaför Uygulaması</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Kullanici/Giris">Kullanıcı Girişi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/AdminGiris">Admin Girişi</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
